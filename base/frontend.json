{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "npmrcMerge": true,
  "packageRules": [
    {
      "matchCategories": ["js"],
      "rangeStrategy": "bump"
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "groupName": "all non-major stable"
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": ["@kong{,-ui,-ui-public}/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "groupName": "{{{lookup (split packageName '/') 0}}} non-major stable",
      "groupSlug": "{{{replace '@' (lowercase (lookup (split packageName '/') 0))}}}-non-major-stable",
      "minimumReleaseAge": "2 hours"
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": ["@kong{,-ui,-ui-public}/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "/^0/",
      "groupName": "{{{lookup (split packageName '/') 0}}} non-major unstable",
      "groupSlug": "{{{replace '@' (lowercase (lookup (split packageName '/') 0))}}}-non-major-unstable"
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": [
        "@kong-ui-public/analytics-*",
        "@kong-ui-public/dashboard-renderer",
        "@kong-ui-public/metric-cards",
        "@kong-ui/konnect-analytics-bridge",
        "@kong-ui/timeframe-selector"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "konnect analytics non-major",
      "minimumReleaseAge": "2 hours"
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": [
        "@vitejs/plugin-vue",
        "@vitest/*",
        "@vue/{tsconfig,test-utils}",
        "@vueuse/*",
        "vite{st,-*}",
        "vue{,-router,-demi,-tsc,-component-meta}"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "groupName": "vue non-major stable"
    },
    {
      "matchCategories": ["js"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "extends": ["packages:stylelint"],
      "groupName": "stylelint non-major stable"
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": ["playwright{,-core}", "@playwright/*"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "groupName": "playwright non-major stable"
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": ["cypress{,-*}", "@cypress/*"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "groupName": "cypress non-major stable"
    },
    {
      "matchCategories": ["js"],
      "matchUpdateTypes": ["minor", "patch"],
      "extends": ["packages:eslint"],
      "groupName": "eslint"
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": ["{@types/,}inquirer"],
      "enabled": false
    },
    {
      "matchCategories": ["js"],
      "matchPackageNames": ["pnpm"],
      "matchDepTypes": ["engines"],
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    }
  ]
}
