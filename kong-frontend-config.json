{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":automergeRequireAllStatusChecks",
    ":automergePatch",
    ":automergeMinor"
  ],
  "dependencyDashboard": true,
  "rangeStrategy": "bump",
  "platformAutomerge": true,
  "npmrcMerge": true,
  "labels": [
    "dependencies",
    "renovate-bot"
  ],
  "schedule": [
    "before 5am every weekday"
  ],
  "timezone": "America/New_York",
  "automergeSchedule": [
    "every weekday"
  ],
  "minimumReleaseAge": "14 days",
  "updateNotScheduled": false,
  "packageRules": [
    {
      "automerge": true,
      "groupName": "all non-major dependencies with stable version",
      "groupSlug": "all-minor-patch",
      "matchCurrentVersion": "!/^0/",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "10 days"
    },
    {
      "automerge": true,
      "groupName": "all @kong scoped dependencies",
      "groupSlug": "all-kong-scoped-deps",
      "matchPackageNames": [
        "@kong/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "2 hours",
      "schedule": [
        "every monday"
      ]
    },
    {
      "automerge": true,
      "groupName": "all @kong-ui scoped dependencies",
      "groupSlug": "all-kong-ui-scoped-deps",
      "matchPackageNames": [
        "@kong-ui/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "2 hours",
      "schedule": [
        "every weekday"
      ]
    },
    {
      "automerge": true,
      "groupName": "all @kong-ui-public scoped dependencies",
      "groupSlug": "all-kong-ui-public-scoped-deps",
      "matchPackageNames": [
        "@kong-ui-public/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "2 hours",
      "schedule": [
        "every weekday"
      ]
    },
    {
      "groupName": "ignored dependencies",
      "groupSlug": "all-kong-ui-ignored-dependencies",
      "matchPackageNames": [
        "inquirer",
        "@types/inquirer"
      ],
      "enabled": false
    }
  ]
}
